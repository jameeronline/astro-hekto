---
//component imports
import { Button } from "@/starwind/button";

//icons import
import { ArrowLeft, ArrowRight } from "@lucide/astro";

export interface Props {
  currentPage: number;
  lastPage: number;
  prevUrl?: string;
  nextUrl?: string;
}

const { currentPage, lastPage, prevUrl, nextUrl } = Astro.props;
---

<nav
  class="flex items-center justify-center gap-4 mt-12 w-full text-tertiary-950"
>
  {
    prevUrl ? (
      <Button variant="ghost" href={prevUrl}>
        <ArrowLeft class="size-4" />{" "}
        <span class="hidden md:inline">Previous</span>
      </Button>
    ) : (
      <Button variant="ghost" disabled>
        <ArrowLeft class="size-4" />{" "}
        <span class="hidden md:inline">Previous</span>
      </Button>
    )
  }

  <span class="px-4 py-2">
    Page <span>{currentPage}</span> of <span class="">{lastPage}</span>
  </span>

  {
    nextUrl ? (
      <Button variant="ghost" href={nextUrl}>
        <span class="hidden md:inline">Next</span> <ArrowRight class="size-4" />
      </Button>
    ) : (
      <Button variant="ghost" disabled>
        <span class="hidden md:inline">Next</span> <ArrowRight class="size-4" />
      </Button>
    )
  }
</nav>
