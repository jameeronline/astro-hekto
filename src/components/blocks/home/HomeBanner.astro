---
import { Image } from "astro:assets";
import { Button } from "@/starwind/button";

//image import
import Header1 from "@/assets/header-banner-1.png";

//blog animation
import BlobAnimation from "@/assets/animated-svg/blob-animation.svg";

//decorative elements
import HeadLamp from "@/assets/head-lamp.png";
---

<div
  class="relative bg-gradient-to-br from-purple-100 to-primary-50 overflow-hidden"
>
  {/* Main Content Container */}
  <div class="relative mx-auto px-8 py-16 flex items-center">
    <div class="container--default">
      <div class="grid lg:grid-cols-2 gap-16 items-center w-full">
        {/* Left Content */}
        <div class="space-y-8 z-10">
          <div class="space-y-6" data-scroll-animate>
            {/* Decorative Text */}
            <p
              class="text-primary-500 font-medium tracking-wide"
              data-scroll-animate
            >
              Best Furniture For Your Castle....
            </p>

            <h1
              class="text-5xl lg:text-5xl font-bold text-gray-900 leading-tight"
              data-scroll-animate
            >
              <span> New Furniture Collection</span>
              <br />
              <span class="text-gray-900">Trends in 2020</span>
            </h1>

            <p class="text-lg max-w-md" data-scroll-animate>
              Discover stylish, comfortable furniture designed to elevate your
              home. Explore our latest collection and find the perfect pieces to
              match your unique taste.
            </p>
          </div>

          <footer data-scroll-animate>
            <Button class="btn--primary" size="lg">Shop Now</Button>
          </footer>

          {/* Pagination Dots */}
          <!-- <div class="flex space-x-3 pt-8">
            <div class="w-3 h-3 bg-primary-500 rounded-full"></div>
            <div class="w-3 h-3 bg-primary-200 rounded-full"></div>
            <div class="w-3 h-3 bg-primary-200 rounded-full"></div>
          </div> -->
        </div>

        {/* Right Content - Chair */}
        <div
          class="relative flex justify-center items-center"
          data-scroll-animate
        >
          <div class="relative">
            {/* Chair Image Placeholder */}
            <div class="w-96 h-96 relative">
              {/* 50% Off Badge - Top Right */}
              <div class="absolute top-2 right-2 z-20" data-scroll-animate>
                <div
                  class="w-24 h-24 flex items-center justify-center relative"
                >
                  <svg viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
                    <path
                      class="fill-accent-600"
                      d="M56.8,-68C72.5,-54.6,83.4,-35.6,86.3,-15.7C89.2,4.2,84.2,25,74,42.9C63.9,60.9,48.6,76.1,30,83.2C11.5,90.2,-10.3,89.2,-29.3,81.7C-48.2,74.3,-64.4,60.4,-74.4,43C-84.5,25.6,-88.4,4.6,-85.3,-15.4C-82.2,-35.5,-72.1,-54.6,-56.7,-68.1C-41.3,-81.6,-20.6,-89.3,0,-89.2C20.6,-89.2,41.1,-81.4,56.8,-68Z"
                      transform="translate(100 100)"></path>
                  </svg>
                  <div class="text-center absolute font-heading">
                    <div class="text-white font-bold text-xl">50%</div>
                    <div class="text-white font-medium">off</div>
                  </div>
                </div>
              </div>

              <figure class="bg-blob-bg bg-no-repeat bg-center relative">
                <BlobAnimation
                  class="absolute inset-0 w-full h-full z-0 fill-primary-200/60"
                />
                <Image
                  src={Header1}
                  alt="primary velvet armchair"
                  class="w-full h-full object-contain"
                  data-scroll-animate
                />
              </figure>
            </div>
          </div>
        </div>
      </div>
    </div>

    {/* Hanging Lamp - Top Left */}
    <div class="absolute top-0 left-32 z-20">
      <div class="relative">
        {/* Lamp Shade */}
        <div class="w-24 h-20 relative">
          <Image
            src={HeadLamp}
            alt="Black pendant lamp"
            class="w-full h-full object-contain"
          />
        </div>
      </div>
    </div>
  </div>

  {/* Background Decorative Elements */}
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    {/* Subtle background patterns or gradients can be added here */}
    <div
      class="absolute top-1/4 right-1/4 w-64 h-64 bg-primary-200 rounded-full opacity-20 blur-3xl"
    >
    </div>
    <div
      class="absolute bottom-1/4 left-1/4 w-48 h-48 bg-purple-200 rounded-full opacity-20 blur-3xl"
    >
    </div>
  </div>
</div>
