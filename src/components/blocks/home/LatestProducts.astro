---

<!-- START - Latest Products -->
<section class="my-16">
  <div
    class="xl:container px-6 mx-auto"
    x-data={`{
      filter: '*',
      products: ${JSON.stringify(products)},
    }`}
    data-scroll-animate
  >
    <SectionHeader>Latest Products</SectionHeader>

    <nav class="flex justify-center gap-6 mb-8" data-scroll-animate>
      <a
        x-on:click="filter = '*'"
        data-filter="*"
        href="javascript:void(0)"
        class="transition-colors duration-300 hover:text-primary-500 hover:underline"
        :class="filter == '*' ? 'text-primary-500':'text-tertiary-950'">All</a
      >
      <a
        x-on:click="filter = 'new'"
        data-filter="new"
        href="javascript:void(0)"
        class="transition-colors duration-300 hover:text-primary-500 hover:underline"
        :class="filter == 'new' ? 'text-primary-500':'text-tertiary-950'"
        >New Arrival</a
      >
      <a
        x-on:click="filter = 'bestseller'"
        data-filter="bestseller"
        href="javascript:void(0)"
        class="transition-colors duration-300 hover:text-primary-500 hover:underline"
        :class="filter == 'bestseller' ? 'text-primary-500':'text-tertiary-950'"
        >Best Seller</a
      >
      <a
        x-on:click="filter = 'featured'"
        data-filter="featured"
        href="javascript:void(0)"
        class="transition-colors duration-300 hover:text-primary-500 hover:underline"
        :class="filter == 'featured' ? 'text-primary-500':'text-tertiary-950'"
        >Featured</a
      >
      <a
        x-on:click="filter = 'special-offer'"
        data-filter="special-offer"
        href="javascript:void(0)"
        class="transition-colors duration-300 hover:text-primary-500 hover:underline"
        :class="filter == 'special-offer' ? 'text-primary-500':'text-tertiary-950'"
        >Special Offer</a
      >
    </nav>

    <!-- Component: grid -->
    <div class="relative overflow-hidden w-full">
      <ul
        class="list grid grid-cols-4 gap-6 md:grid-cols-8 lg:grid-cols-12 lg:gap-10"
      >
        <template x-for="product in products.slice(0, 6)" :key="product.id">
          <li
            class="col-span-4 md:col-span-4"
            x-show="filter === '*' || product.category === filter"
          >
            <article class="group overflow-hidden">
              <figure
                class="relative overflow-hidden aspect-[4/3] w-full bg-neutral-50 rounded-lg lg:rounded-none flex items-center justify-center transition-colors duration-200 group-hover:bg-emphasis-200"
              >
                <ul
                  class="list-none inline-flex flex-col-reverse absolute z-10 -bottom-3 left-3 opacity-0 transition-all group-hover:opacity-100 group-hover:bottom-3"
                >
                  <template
                    x-for="icon in $astro.props.productIcons"
                    :key="icon.label"
                  >
                    <li>
                      <a
                        :href="icon.href"
                        class="inline-flex w-8 h-8 items-center justify-center rounded-full text-tertiary-800 transition-colors hover:bg-tertiary-200"
                        :aria-label="icon.label"
                      >
                        <component :is="icon.icon" class="size-4"></component>
                      </a>
                    </li>
                  </template>
                </ul>
                <ul
                  class="list-none inline-flex flex-col-reverse absolute z-10 -bottom-3 left-3 opacity-0 transition-all group-hover:opacity-100 group-hover:bottom-3"
                >
                  <li>
                    <a
                      href="#"
                      class="inline-flex w-8 h-8 items-center justify-center rounded-full text-tertiary-800 transition-colors hover:bg-tertiary-200"
                    >
                      <ShoppingCart class="size-4" />
                    </a>
                  </li>
                  <li>
