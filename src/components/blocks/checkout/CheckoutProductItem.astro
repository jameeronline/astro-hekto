---
const { item } = Astro.props;
---

<div
  class="flex items-center justify-between py-4 gap-4 first:pt-0 border-b border-gray-200 last:border-b-0"
>
  <div class="flex items-center space-x-4">
    <div class="relative flex-none">
      <img
        src={item.image || "/placeholder.svg"}
        alt={item.name}
        class="size-20 flex-none object-cover rounded-md bg-gray-200"
      />
    </div>
    <div>
      <h5
        class="text-base font-medium text-tertiary-900 line-clamp-2 md:line-clamp-none"
      >
        {item.name}
      </h5>
      <p class="text-sm text-gray-500">Color: {item.color}</p>
      <p class="text-sm text-gray-500">Size: {item.size}</p>
    </div>
  </div>
  <div class="text-right">
    <p class="font-semibold text-emphasis-700 whitespace-nowrap">
      <span class="currency-symbol"></span>
      <span>{item.price}</span>
    </p>
    <p class="text-sm text-gray-500">
      <a href="#" class="text-red-500 hover:underline">Remove</a>
    </p>
  </div>
</div>
