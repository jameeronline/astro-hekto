---
import {
  Breadcrumb,
  BreadcrumbItem,
  BreadcrumbLink,
  BreadcrumbList,
  BreadcrumbPage,
  BreadcrumbSeparator,
} from "@/starwind/breadcrumb";

interface HeaderInfo {
  title: string;
  caption: string;
  description: string;
}

const { headerInfo: HeaderInfo } = Astro.props;
const { title, caption, description } = HeaderInfo || {
  title: "Page Title",
  caption: "Page Caption",
  description: "Page Description",
};
---

<section
  class="bg-brand-50 h-40 lg:h-52 flex flex-col justify-center text-tertiary-950"
>
  <div class="container--light" data-scroll-animate>
    <p
      class="text-2xl md:text-4xl font-heading font-bold mb-2"
      data-scroll-animate
    >
      {title}
    </p>

    <Breadcrumb data-scroll-animate class="text-tertiary-900 text-sm">
      <BreadcrumbList>
        <BreadcrumbItem>
          <BreadcrumbLink href="/">Home</BreadcrumbLink>
        </BreadcrumbItem>
        <BreadcrumbSeparator>/</BreadcrumbSeparator>
        <BreadcrumbItem>
          <BreadcrumbLink href="/components">Page</BreadcrumbLink>
        </BreadcrumbItem>
        <BreadcrumbSeparator>/</BreadcrumbSeparator>
        <BreadcrumbItem>
          <BreadcrumbPage class="text-primary-500 capitalize"
            >{caption || title}</BreadcrumbPage
          >
        </BreadcrumbItem>
      </BreadcrumbList>
    </Breadcrumb>
  </div>
</section>
