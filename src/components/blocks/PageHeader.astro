---
import {
  Breadcrumb,
  BreadcrumbItem,
  BreadcrumbLink,
  BreadcrumbList,
  BreadcrumbPage,
  BreadcrumbSeparator,
} from "@/starwind/breadcrumb";

interface HeaderInfo {
  title: string;
  caption: string;
  description: string;
}

const { headerInfo: HeaderInfo } = Astro.props;
const { title, caption, description } = HeaderInfo || {
  title: "Page Title",
  caption: "Page Caption",
  description: "Page Description",
};
---

<header class="bg-brand-50 h-64 flex flex-col justify-center text-tertiary-950">
  <div class="w-full xl:container px-6 mx-auto" data-scroll-animate>
    <p class="text-4xl font-heading font-bold mb-2" data-scroll-animate>
      {title}
    </p>

    <Breadcrumb data-scroll-animate>
      <BreadcrumbList>
        <BreadcrumbItem>
          <BreadcrumbLink href="/">Home</BreadcrumbLink>
        </BreadcrumbItem>
        <BreadcrumbSeparator>/</BreadcrumbSeparator>
        <BreadcrumbItem>
          <BreadcrumbLink href="/components">Page</BreadcrumbLink>
        </BreadcrumbItem>
        <BreadcrumbSeparator>/</BreadcrumbSeparator>
        <BreadcrumbItem class="text-primary-500">
          <BreadcrumbPage>{caption || title}</BreadcrumbPage>
        </BreadcrumbItem>
      </BreadcrumbList>
    </Breadcrumb>
  </div>
</header>
