---
//components imports
import BaseLayout from "@/layouts/BaseLayout.astro";

//icons imports
import { Icon } from "astro-icon/components";
import { ArrowLeftIcon } from "@lucide/astro";
---

<BaseLayout>
  <section
    class="h-full flex flex-col items-center justify-center text-center py-20 md:py-32"
  >
    <Icon name="500" class="size-24 mb-10 font-heading" />
    <h1 class="text-4xl md:text-6xl mb-4">500 - Server Error</h1>
    <p class="mb-10 text-base md:text-lg text-gray-600">
      Sorry, the page you are looking for does not exist.
    </p>
    <a
      href="/"
      class="text-gray-900 bg-white border border-gray-300 focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-100 font-medium rounded-full text-sm px-5 py-2.5 me-2 mb-2 dark:bg-gray-800 dark:text-white dark:border-gray-600 dark:hover:bg-gray-700 dark:hover:border-gray-600 dark:focus:ring-gray-700"
    >
      <ArrowLeftIcon class="w-4 h-4 inline-block mr-2" />
      Back to Homepage</a
    >
  </section>
</BaseLayout>
