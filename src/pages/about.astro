---
import BaseLayout from "@/layouts/BaseLayout.astro";

import { Button } from "@/starwind/button";
import { Truck, HandCoins, Award, Clock } from "@lucide/astro";

const features = [
  {
    icon: Truck,
    title: "Free Delivery",
    description:
      "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Massa purus gravida.",
    color: "text-orange-500",
  },
  {
    icon: HandCoins,
    title: "100% Cash Back",
    description:
      "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Massa purus gravida.",
    color: "text-blue-500",
  },
  {
    icon: Award,
    title: "Quality Product",
    description:
      "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Massa purus gravida.",
    color: "text-pink-500",
  },
  {
    icon: Clock,
    title: "24/7 Support",
    description:
      "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Massa purus gravida.",
    color: "text-green-500",
  },
];

const clientImages = [
  "/placeholder.svg?height=60&width=60",
  "/placeholder.svg?height=60&width=60",
  "/placeholder.svg?height=60&width=60",
];
---

<BaseLayout title="About Us">
  <div class="min-h-screen bg-white">
    {/* Hero Section */}
    <div class="relative py-20 px-4">
      <div class="max-w-7xl mx-auto">
        <div class="grid lg:grid-cols-2 gap-16 items-center">
          {/* Left Side - Decorative Element */}
          <div class="relative">
            <div class="w-full h-96 relative">
              {/* Blue L-shaped border */}
              <div class="absolute inset-0">
                <div
                  class="w-full h-full border-l-8 border-b-8 border-blue-600 rounded-bl-lg"
                >
                </div>
              </div>
            </div>
          </div>

          {/* Right Side - Content */}
          <div class="space-y-6">
            <h1
              class="text-4xl lg:text-5xl font-bold text-blue-900 leading-tight"
            >
              Know About Our Ecomerce
              <br />
              Business, History
            </h1>

            <p class="text-gray-600 text-lg leading-relaxed">
              Lorem ipsum dolor sit amet, consectetur adipiscing elit. Mattis
              neque ultrices mattis aliquam, malesuada diam est. Malesuada sem
              tristique amet erat vitae eget dolor lobortis. Accumsan faucibus
              vitae lobortis quis bibendum quam.
            </p>

            <Button
              class="bg-pink-500 hover:bg-pink-600 text-white px-8 py-3 text-lg font-medium rounded-md"
            >
              Contact us
            </Button>
          </div>
        </div>
      </div>
    </div>

    {/* Features Section */}
    <div class="py-20 px-4 bg-gray-50">
      <div class="max-w-7xl mx-auto">
        <h2 class="text-4xl font-bold text-center text-gray-900 mb-16">
          Our Features
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          {
            features.map((feature, index) => (
              <div
                key={index}
                class="text-center bg-white p-8 rounded-lg shadow-sm"
              >
                <div class="flex justify-center mb-6">
                  <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center">
                    <feature.icon class={`w-8 h-8 ${feature.color}`} />
                  </div>
                </div>

                <h3 class="text-xl font-semibold text-blue-900 mb-4">
                  {feature.title}
                </h3>

                <p class="text-gray-600 text-sm leading-relaxed">
                  {feature.description}
                </p>
              </div>
            ))
          }
        </div>
      </div>
    </div>

    {/* Testimonial Section */}
    <div class="py-20 px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-4xl font-bold text-gray-900 mb-16">Our Client Say!</h2>

        <div class="space-y-8">
          {/* Client Images */}
          <div class="flex justify-center space-x-4">
            {
              clientImages.map((image, index) => (
                <div key={index} class="relative">
                  <img
                    src={image || "/placeholder.svg"}
                    alt={`Client ${index + 1}`}
                    class="w-16 h-16 rounded-full object-cover border-2 border-gray-200"
                  />
                </div>
              ))
            }
          </div>

          {/* Client Name */}
          <h3 class="text-xl font-semibold text-blue-900">Selina Gomez</h3>

          {/* Testimonial Text */}
          <p class="text-gray-600 text-lg leading-relaxed max-w-2xl mx-auto">
            Lorem ipsum dolor sit amet, consectetur adipiscing elit. Non duis
            ultrices quam vel dui sollicitudin aliquet id arcu. Nam vitae a enim
            nunc, sed sapien egestas ac nam. Tristique ultrices dolor aliquam
            lacus volutpat praesent.
          </p>

          {/* Pagination Dots */}
          <div class="flex justify-center space-x-2 pt-8">
            <div class="w-3 h-3 bg-pink-500 rounded-full"></div>
            <div class="w-3 h-3 bg-pink-200 rounded-full"></div>
            <div class="w-3 h-3 bg-pink-200 rounded-full"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
