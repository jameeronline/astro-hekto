---
import BaseLayout from "@/layouts/BaseLayout.astro";

import { Button } from "@/starwind/button";
import { Checkbox } from "@/starwind/checkbox";
import {
  Select,
  SelectContent,
  SelectItem,
  SelectTrigger,
  SelectValue,
} from "@/starwind/select";
import PageHeader from "@/components/blocks/PageHeader.astro";
import CheckoutForm from "@/components/blocks/checkout/CheckoutForm.astro";
import CheckoutProductItem from "@/components/blocks/checkout/CheckoutProductItem.astro";

const orderItems = [
  {
    id: 1,
    name: "Classic Leather Backpack",
    color: "Tan",
    size: "M",
    price: "89.00",
    image: "./products/product-thumbnail-1.png",
  },
  {
    id: 2,
    name: "Cotton Crewneck T-Shirt",
    color: "White",
    size: "L",
    price: "19.99",
    image: "./products/product-thumbnail-2.png",
  },
  {
    id: 3,
    name: "Slim Fit Jeans",
    color: "Indigo",
    size: "32",
    price: "54.50",
    image: "./products/product-thumbnail-3.png",
  },
  {
    id: 4,
    name: "Wool Blend Overcoat",
    color: "Charcoal",
    size: "XL",
    price: "120.00",
    image: "./products/product-thumbnail-4.png",
  },
  {
    id: 5,
    name: "Running Sneakers",
    color: "Blue/White",
    size: "10",
    price: "59.00",
    image: "./products/product-thumbnail-5.png",
  },
];
---

<BaseLayout title="Checkout">
  <PageHeader
    headerInfo={{
      title: "Checkout",
      caption: "Complete your order",
      description: "Fill in your details to proceed with the checkout.",
    }}
    slot="pageHeader"
  />
  <div class="container--default">
    <div class="grid lg:grid-cols-2 gap-16">
      {/* Left Column - Checkout Form */}
      <CheckoutForm />

      {/* Right Column - Order Summary */}
      <div class="space-y-6">
        {/* Order Items */}
        <div class="space-y-0">
          {orderItems.map((item) => <CheckoutProductItem item={item} />)}
        </div>

        {/* Order Totals */}
        <div class="space-y-3 pt-4 border-t border-gray-200">
          <div class="flex justify-between">
            <span class="text-gray-700">Subtotals:</span>
            <span class="font-medium text-gray-900">£219.00</span>
          </div>
          <div class="flex justify-between text-lg font-semibold">
            <span class="text-gray-900">Totals:</span>
            <span class="text-gray-900">£325.00</span>
          </div>
        </div>

        {/* Shipping Notice */}
        <div class="flex items-center space-x-2 py-3">
          <div class="w-2 h-2 bg-primary-500 rounded-full"></div>
          <span class="text-sm text-gray-600"
            >Shipping & taxes calculated at checkout</span
          >
        </div>

        {/* Checkout Button */}
        <Button class="w-full btn--tertiary"> Proceed To Checkout </Button>
      </div>
    </div>
  </div>
</BaseLayout>
