---
import BaseLayout from "@/layouts/BaseLayout.astro";

import { Button } from "@/starwind/button";
import { Input } from "@/starwind/input";
import { Checkbox } from "@/starwind/checkbox";
import {
  Select,
  SelectContent,
  SelectItem,
  SelectTrigger,
  SelectValue,
} from "@/starwind/select";
import PageHeader from "@/components/blocks/PageHeader.astro";

const orderItems = [
  {
    id: 1,
    name: "Classic Leather Backpack",
    color: "Tan",
    size: "M",
    price: "89.00",
    image: "./products/product-thumbnail-1.png",
  },
  {
    id: 2,
    name: "Cotton Crewneck T-Shirt",
    color: "White",
    size: "L",
    price: "19.99",
    image: "./products/product-thumbnail-2.png",
  },
  {
    id: 3,
    name: "Slim Fit Jeans",
    color: "Indigo",
    size: "32",
    price: "54.50",
    image: "./products/product-thumbnail-3.png",
  },
  {
    id: 4,
    name: "Wool Blend Overcoat",
    color: "Charcoal",
    size: "XL",
    price: "120.00",
    image: "./products/product-thumbnail-4.png",
  },
  {
    id: 5,
    name: "Running Sneakers",
    color: "Blue/White",
    size: "10",
    price: "59.00",
    image: "./products/product-thumbnail-5.png",
  },
];
---

<BaseLayout title="Checkout">
  <PageHeader
    headerInfo={{
      title: "Checkout",
      caption: "Complete your order",
      description: "Fill in your details to proceed with the checkout.",
    }}
    slot="pageHeader"
  />
  <div class="container--default">
    <div class="grid lg:grid-cols-2 gap-16">
      {/* Left Column - Checkout Form */}
      <div class="space-y-8 bg-brand-100/50 p-12 rounded-lg">
        {/* Breadcrumb */}
        <div>
          <h2 class="text-xl font-semibold text-blue-900 mb-2">Hekto Demo</h2>
          <p class="text-sm text-gray-500">
            Cart / Information / Shipping / Payment
          </p>
        </div>

        {/* Contact Information */}
        <div class="space-y-4">
          <h3 class="text-lg font-medium text-blue-900">Contact Information</h3>
          <Input
            type="email"
            placeholder="Email or mobile phone number"
            class="w-full h-12 px-4 border border-gray-300 rounded-md bg-white text-gray-700 placeholder:text-gray-400"
          />
          <div class="flex items-center space-x-2">
            <Checkbox
              id="offers"
              class="border-green-500 data-[state=checked]:bg-green-500"
            />
            <label htmlFor="offers" class="text-sm text-green-600">
              Keep me up to date on news and exclusive offers
            </label>
          </div>
        </div>

        {/* Shipping Address */}
        <div class="space-y-4">
          <h3 class="text-lg font-medium text-blue-900">Shipping address</h3>

          <div class="grid grid-cols-2 gap-4">
            <Input
              type="text"
              placeholder="First name (optional)"
              class="h-12 px-4 border border-gray-300 rounded-md bg-white text-gray-700 placeholder:text-gray-400"
            />
            <Input
              type="text"
              placeholder="Last name"
              class="h-12 px-4 border border-gray-300 rounded-md bg-white text-gray-700 placeholder:text-gray-400"
            />
          </div>

          <Input
            type="text"
            placeholder="Address"
            class="w-full h-12 px-4 border border-gray-300 rounded-md bg-white text-gray-700 placeholder:text-gray-400"
          />

          <Input
            type="text"
            placeholder="Apartment, suite, etc. (optional)"
            class="w-full h-12 px-4 border border-gray-300 rounded-md bg-white text-gray-700 placeholder:text-gray-400"
          />

          <Input
            type="text"
            placeholder="City"
            class="w-full h-12 px-4 border border-gray-300 rounded-md bg-white text-gray-700 placeholder:text-gray-400"
          />

          <div class="grid grid-cols-2 gap-4">
            <Select>
              <SelectTrigger class="h-12 border-gray-300">
                <SelectValue placeholder="Bangladesh" />
              </SelectTrigger>
              <SelectContent>
                <SelectItem value="bangladesh">Bangladesh</SelectItem>
                <SelectItem value="india">India</SelectItem>
                <SelectItem value="pakistan">Pakistan</SelectItem>
              </SelectContent>
            </Select>
            <Input
              type="text"
              placeholder="Postal Code"
              class="h-12 px-4 border border-gray-300 rounded-md bg-white text-gray-700 placeholder:text-gray-400"
            />
          </div>
        </div>

        <Button
          class="bg-pink-500 hover:bg-pink-600 text-white px-8 py-3 rounded-md font-medium"
        >
          Continue Shipping
        </Button>
      </div>

      {/* Right Column - Order Summary */}
      <div class="space-y-6">
        {/* Order Items */}
        <div class="space-y-4">
          {
            orderItems.map((item) => (
              <div
                key={item.id}
                class="flex items-center justify-between py-3 border-b border-gray-200 last:border-b-0"
              >
                <div class="flex items-center space-x-4">
                  <div class="relative">
                    <img
                      src={item.image || "/placeholder.svg"}
                      alt={item.name}
                      class="w-16 h-16 object-cover rounded-md bg-gray-200"
                    />
                  </div>
                  <div>
                    <h5 class="font-medium text-gray-900">{item.name}</h5>
                    <p class="text-sm text-gray-500">Color: {item.color}</p>
                    <p class="text-sm text-gray-500">Size: {item.size}</p>
                  </div>
                </div>
                <div class="text-right">
                  <p class="font-semibold text-tertiary-900">${item.price}</p>
                </div>
              </div>
            ))
          }
        </div>

        {/* Order Totals */}
        <div class="space-y-3 pt-4 border-t border-gray-200">
          <div class="flex justify-between">
            <span class="text-gray-700">Subtotals:</span>
            <span class="font-medium text-gray-900">£219.00</span>
          </div>
          <div class="flex justify-between text-lg font-semibold">
            <span class="text-gray-900">Totals:</span>
            <span class="text-gray-900">£325.00</span>
          </div>
        </div>

        {/* Shipping Notice */}
        <div class="flex items-center space-x-2 py-3">
          <div class="w-2 h-2 bg-primary-500 rounded-full"></div>
          <span class="text-sm text-gray-600"
            >Shipping & taxes calculated at checkout</span
          >
        </div>

        {/* Checkout Button */}
        <Button
          class="w-full bg-tertiary-900 hover:bg-tertiary-950 text-white py-4 rounded-md font-medium text-lg"
        >
          Proceed To Checkout
        </Button>
      </div>
    </div>
  </div>
</BaseLayout>
