            <h3 class="text-lg font-semibold text-blue-900 mb-4">
              Filter By Color
            </h3>
            <div class="flex flex-wrap gap-3">
              {
                colors.map((color, index) => (
                  <div key={index} class="flex items-center space-x-2">
                    <div
                      class={`w-4 h-4 rounded-full ${color.color} cursor-pointer border border-gray-300`}
                    />
                    <span class="text-sm text-gray-700">{color.name}</span>
                  </div>
                ))
              }
            </div>
          </div>
        </div>

        {/* Product Grid */}
        <div class="col-span-9">
          <div class="space-y-6">
            {
              products.map((product) => (
                <div
                  key={product.id}
                  class="flex bg-white rounded-lg shadow-sm border border-gray-200 p-6"
                >
                  <div class="w-48 h-48 bg-gray-100 rounded-lg flex items-center justify-center mr-6">
                    <img
                      src={product.image || "/placeholder.svg"}
                      alt={product.name}
                      class="w-full h-full object-contain"
                    />
                  </div>

                  <div class="flex-1 space-y-3">
                    <div class="flex items-start justify-between">
                      <div>
                        <h3 class="text-lg font-semibold text-blue-900 mb-1">
                          {product.name}
                        </h3>
                        <div class="flex items-center space-x-2 mb-2">
                          {/* <div class="flex">{renderStars(product.rating)}</div> */}
                          <div class="flex space-x-1">
                            <div class="w-2 h-2 bg-orange-400 rounded-full" />
                            <div class="w-2 h-2 bg-pink-400 rounded-full" />
                            <div class="w-2 h-2 bg-blue-400 rounded-full" />
                          </div>
                        </div>
                        <div class="flex items-center space-x-3 mb-3">
                          <span class="text-lg font-semibold text-blue-900">
                            {product.salePrice}
                          </span>
                          <span class="text-lg text-red-500 line-through">
                            {product.originalPrice}
                          </span>
                        </div>
                      </div>

                      <div class="flex space-x-2">
                        <Button variant="ghost" size="sm" class="p-2">
                          <ShoppingCart class="h-4 w-4 text-blue-900" />
                        </Button>
                        <Button variant="ghost" size="sm" class="p-2">
                          <Heart class="h-4 w-4 text-blue-900" />
                        </Button>
                        <Button variant="ghost" size="sm" class="p-2">
                          <Search class="h-4 w-4 text-blue-900" />
                        </Button>
                      </div>
                    </div>

                    <p class="text-sm text-gray-600 leading-relaxed">
                      {product.description}
                    </p>
                  </div>
                </div>
              ))
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
