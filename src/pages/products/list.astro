---

<BaseLayout
  title="Product List"
  description="Browse our collection of fashion accessories and items."
>
  <PageHeader headerInfo={pageHeader} slot="pageHeader" />
  <div class="min-h-screen bg-white">
    {/* Header */}
    <div class="border-b border-gray-200 py-6 px-4">
      <div class="max-w-7xl mx-auto flex items-center justify-between">
        <div>
          <h1 class="text-2xl font-semibold text-blue-900 mb-1">
            Ecommerce Accesories & Fashion Item
          </h1>
          <p class="text-sm text-gray-500">
            About 9,620 results (0.62 seconds)
          </p>
        </div>

        <div class="flex items-center space-x-6">
          <div class="flex items-center space-x-2">
            <span class="text-sm text-gray-600">Per Page:</span>
            <Select defaultValue="12">
              <SelectTrigger class="w-16 h-8 text-sm">
                <SelectValue />
              </SelectTrigger>
              <SelectContent>
                <SelectItem value="12">12</SelectItem>
                <SelectItem value="24">24</SelectItem>
              </SelectContent>
            </Select>
          </div>

          <div class="flex items-center space-x-2">
            <span class="text-sm text-gray-600">Sort By:</span>
            <Select defaultValue="best-match">
              <SelectTrigger class="w-32 h-8 text-sm">
                <SelectValue />
              </SelectTrigger>
              <SelectContent>
                <SelectItem value="best-match">Best Match</SelectItem>
                <SelectItem value="price-low">Price: Low to High</SelectItem>
              </SelectContent>
            </Select>
          </div>

          <div class="flex items-center space-x-2">
            <span class="text-sm text-gray-600">View:</span>
            <div class="flex border border-gray-300 rounded">
              <Button
                variant="ghost"
                size="sm"
                class="h-8 w-8 p-0 bg-blue-500 text-white"
              >
                <Grid class="h-4 w-4" />
              </Button>
              <Button variant="ghost" size="sm" class="h-8 w-8 p-0">
                <List class="h-4 w-4" />
              </Button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 py-8">
      <div class="grid grid-cols-12 gap-8">
        {/* Sidebar */}
        <div class="col-span-3 space-y-8">
          {/* Product Brand */}
          <div>
            <h3 class="text-lg font-semibold text-blue-900 mb-4">
              Product Brand
            </h3>
            <div class="space-y-3">
              {
                brands.map((brand, index) => (
                  <div key={index} class="flex items-center space-x-2">
                    <Checkbox
                      id={`brand-${index}`}
                      checked={brand.checked}
                      label={brand.name}
                    />
                  </div>
                ))
              }
            </div>
          </div>

          {/* Discount Offer */}
          <div>
            <h3 class="text-lg font-semibold text-blue-900 mb-4">
              Discount Offer
            </h3>
            <div class="space-y-3">
              {
                discountOffers.map((offer, index) => (
                  <div key={index} class="flex items-center space-x-2">
                    <Checkbox
                      id={`offer-${index}`}
                      checked={offer.checked}
                      label={offer.label}
                    />
                  </div>
                ))
              }
            </div>
          </div>

          {/* Rating Item */}
          <div>
            <h3 class="text-lg font-semibold text-blue-900 mb-4">
              Rating Item
            </h3>
            <div class="space-y-3">
              {
                ratings.map((rating, index) => (
                  <div key={index} class="flex items-center space-x-2">
                    <Checkbox id={`rating-${index}`} checked={rating.checked} />
                    <div class="flex items-center space-x-2">
                      {/* <div class="flex">{renderStars(rating.stars)}</div> */}
                      <span class="text-sm text-gray-500">
                        ({rating.count})
                      </span>
                    </div>
                  </div>
                ))
              }
            </div>
          </div>

          {/* Categories */}
          <div>
            <h3 class="text-lg font-semibold text-blue-900 mb-4">Categories</h3>
            <div class="space-y-3">
              {
                categories.map((category, index) => (
                  <div key={index} class="flex items-center space-x-2">
                    <Checkbox
                      id={`category-${index}`}
                      checked={category.checked}
                      label={category.name}
                    />
                  </div>
                ))
              }
            </div>
          </div>

          {/* Price Filter */}
          <div>
            <h3 class="text-lg font-semibold text-blue-900 mb-4">
              Price Filter
            </h3>
            <div class="space-y-4">
              <div class="space-y-3">
                {
                  priceFilters.map((filter, index) => (
                    <div key={index} class="flex items-center space-x-2">
                      <Checkbox
                        id={`price-${index}`}
                        checked={filter.checked}
                        label={filter.range}
                      />
                    </div>
                  ))
                }
              </div>
              <!-- <div class="pt-4">
              <Slider
                value={priceRange}
                onValueChange={setPriceRange}
                max={500}
                step={10}
                class="w-full"
              />
