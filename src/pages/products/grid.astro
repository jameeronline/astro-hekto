---

<BaseLayout>
  <PageHeader headerInfo={pageHeader} slot="pageHeader" />

  <div class="min-h-screen bg-white py-8">
    <div class="lg:container mx-auto px-6">
      {/* Header */}
      <div class="flex items-center justify-between my-16" data-scroll-animate>
        <div>
          <h1 class="text-2xl font-semibold text-tertiary-900 mb-1">
            Ecommerce Accesories & Fashion Item
          </h1>
          <p class="text-sm text-gray-500">
            About 9,620 results (0.62 seconds)
          </p>
        </div>

        <div class="flex items-center space-x-6">
          <div class="flex items-center space-x-2">
            <span class="text-sm text-gray-600">Per Page:</span>
            <Select defaultValue="12">
              <SelectTrigger class="h-10 w-16 text-sm border-gray-300">
                <SelectValue />
              </SelectTrigger>
              <SelectContent>
                <SelectItem value="12">12</SelectItem>
                <SelectItem value="24">24</SelectItem>
                <SelectItem value="48">48</SelectItem>
              </SelectContent>
            </Select>
          </div>

          <div class="flex items-center space-x-4">
            <span class="text-sm text-gray-600">Sort By:</span>
            <Select defaultValue="best-match">
              <SelectTrigger class="h-10 w-32 text-sm border-gray-300">
                <SelectValue />
              </SelectTrigger>
              <SelectContent>
                <SelectItem value="best-match">Best Match</SelectItem>
                <SelectItem value="price-low">Price: Low to High</SelectItem>
                <SelectItem value="price-high">Price: High to Low</SelectItem>
                <SelectItem value="newest">Newest</SelectItem>
              </SelectContent>
            </Select>
          </div>

          <div class="flex items-center space-x-2">
            <span class="text-sm text-gray-600">View:</span>
            <div class="flex border border-gray-300 rounded">
              <Button
                variant="ghost"
                size="sm"
                class="h-10 w-10 p-0 bg-tertiary-500 text-white hover:bg-tertiary-600"
              >
                <Grid class="h-4 w-4" />
              </Button>
              <Button
                variant="ghost"
                size="sm"
                class="h-10 w-10 p-0 hover:bg-gray-100"
              >
                <List class="h-4 w-4" />
              </Button>
            </div>
          </div>
        </div>
      </div>

      {/* Product Grid */}
      <div
        class="grid grid-cols-4 gap-4 md:grid-cols-8 md:gap-6 lg:grid-cols-12 lg:gap-10"
        data-scroll-animate
      >
        {
          products.map((product) => (
            <div
              key={product.id}
              class="col-span-4 lg:col-span-3 group rounded-lg overflow-hidden duration-300"
              data-scroll-animate
            >
              {/* Product Image */}
              <div class="relative bg-accent-50/50 hover:bg-[#EBF4F3] aspect-square flex items-center justify-center">
                <Image
                  src={product.image || "/placeholder.svg"}
                  alt={product.name}
                  width={180}
                  height={180}
                  loading="lazy"
                  format="webp"
                />

                {/* Hover Icons */}
                <div class="absolute bottom-4 left-1/2 transform -translate-x-1/2 flex space-x-2 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                  <Button
                    size="sm"
                    variant="ghost"
                    class="h-8 w-8 p-0 bg-white hover:bg-teritairy-500 hover:text-white rounded-full shadow-md"
                  >
                    <ShoppingCart class="h-4 w-4" />
                  </Button>
                  <Button
                    size="sm"
                    variant="ghost"
                    class="h-8 w-8 p-0 bg-white hover:bg-red-500 hover:text-white rounded-full shadow-md"
                  >
                    <Heart class="h-4 w-4" />
                  </Button>
                  <Button
                    size="sm"
                    variant="ghost"
                    class="h-8 w-8 p-0 bg-white hover:bg-green-500 hover:text-white rounded-full shadow-md"
                  >
                    <Search class="h-4 w-4" />
                  </Button>
                </div>
              </div>

              {/* Product Info */}
              <div class="p-4 text-center font-semibold">
                <h6 class="mb-2">{product.name}</h6>

                {/* Rating */}
                <div class="flex justify-center mb-2">
                  {/* {renderStars(product.rating)} */}
                </div>

                {/* Pricing */}
                <div class="flex items-center justify-center space-x-2">
                  <span class="text-tertiary-900 font-medium text-sm">
                    {product.salePrice}
                  </span>
                  <span class="text-primary-500 line-through text-sm">
                    {product.originalPrice}
                  </span>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>

    {/* Company Logos Section */}
    <div class="mt-20 pt-12 border-t border-gray-200" data-scroll-animate>
      <Partners />
    </div>
  </div>
</BaseLayout>
